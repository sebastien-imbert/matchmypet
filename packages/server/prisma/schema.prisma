datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @default(cuid())
  email    String    @unique
  password String
  username String    @unique
  location Location?

  // Relation inverse vers Animal
  animals Animal[]
}

model Location {
  id        String @id @default(cuid())
  latitude  Float
  longitude Float
  user      User   @relation(fields: [userId], references: [id])
  userId    String @unique
}

model Animal {
  id             String         @id @default(cuid())
  name           String
  sex            Sex
  age            Int
  species        Species
  breed          String?
  description    String?
  breedingStatus BreedingStatus
  createdAt      DateTime       @default(now())

  // Relation avec User
  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String
}

// Les enums doivent aussi être définis dans Prisma :
enum Sex {
  MALE
  FEMALE
}

enum Species {
  CHIEN
  CHAT
}

enum BreedingStatus {
  NONE
  AVAILABLE
  LOOKING
}
